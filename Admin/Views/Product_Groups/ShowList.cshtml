@model IEnumerable<MyEshop.Models.Product_Groups>

@(Html.Kendo().Grid(Model)
              .Name("Grid")
              .Columns(columns =>
                  {
                      columns.Bound(model => model.GroupTitle);
                      columns.Bound(item => @item.GroupID).Title("دستورات").Filterable(false).Groupable(false)
                              .Template(@<text>
                            @*@Html.ActionLink("ویرایش", "Edit", new {id = @item.GroupID}, new {@class = "k-button k-button-icontext k-grid-Edit"})
                                @Html.ActionLink("حذف", "Delete", new {id = @item.GroupID}, new {@class = "k-button k-button-icontext k-grid-Delete"})*@


                            <a onclick="Edit(@item.GroupID)" class="btn btn-warning">
                                <i class="glyphicon glyphicon-edit"></i>
                            </a>

                            <a onclick="Delete(@item.GroupID)" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>
                            </a>
                            </text>).Width(200);
                  })
            .ToolBar(toolbar =>
                        {
                            toolbar.Custom().Action("Create", "Product_Groups").Text("افزودن").HtmlAttributes(new { id = "btnCreate" });
                        }
            )
            .Groupable()
            .Pageable()
            .Sortable()
            .Scrollable()
            .Filterable()
            .DataSource(dataSource => dataSource
                                        .Server()

                                        .Model(model => model.Id(item => item.GroupID))
                        )
)
