@model MyEshop.Models.Product_Groups

@{
    ViewBag.Title = "ویرایش " + Server.HtmlDecode(Html.DisplayNameFor(model => model).ToString());
}

<h2>@ViewBag.Title</h2>

@using (Ajax.BeginForm("Edit", "Product_Groups", FormMethod.Post, new AjaxOptions()
{
    UpdateTargetId = "showlist",
    OnSuccess = "Success"
}))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">        
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GroupID)

        <div class="form-group">
            @Html.LabelFor(model => model.GroupTitle, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.GroupTitle,new{@class="form-control"})
                @Html.ValidationMessageFor(model => model.GroupTitle)
            </div>
        </div>

        <div class="form-group" id="buttons">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="ثبت" class="btn btn-primary" onclick="$.validator.unobtrusive.parse($('form'));" />
				@Html.ActionLink("بازگشت به فهرست", "Index")
            </div>
        </div>
    </div>
}

